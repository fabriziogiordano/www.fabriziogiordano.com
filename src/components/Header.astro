---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
---

<header>
	<style>
		h2 {
			font-size: 2em;
			text-align: center;
		}
		
		nav {
			margin: 0 auto;
			width: 100%;
			display: flex;
			justify-content: center;
		}
	</style>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="https://twitter.com/fabrygio" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/fabriziogiordano" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
